@model Services
<div class="container">
    <h2 class="mb-4">Add Member</h2>
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Service title</label>
            <input asp-for="Title">
            <span asp-validation-for="Title" style="color:red"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Service description</label>
            <input asp-for="Description" />
            <span asp-validation-for="Description" style="color:red"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ImgFile" class="form-label">Service Image</label>
            <input asp-for="ImgFile">
            <span asp-validation-for="ImgFile" style="color:red"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>